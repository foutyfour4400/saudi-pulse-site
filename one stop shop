    <script>
        // Language selector functionality
        document.getElementById('languageSelector').addEventListener('change', function() {
            const lang = this.value;
            // This would be replaced with actual translation logic
            alert(`Language changed to ${lang === 'en' ? 'English' : 'Arabic'}`);
        });

        // City selector functionality
        const cityBtns = document.querySelectorAll('.city-btn');
        cityBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                // Remove active class from all buttons
                cityBtns.forEach(b => b.classList.remove('bg-green-600', 'text-white'));
                
                // Add active class to clicked button
                this.classList.add('bg-green-600', 'text-white');
                
                // Hide all city content
                document.querySelectorAll('.city-content').forEach(content => {
                    content.classList.remove('active');
                });
                
                // Show selected city content
                const cityId = this.getAttribute('data-city');
                document.getElementById(`${cityId}-content`).classList.add('active');
            });
        });
    </script>
